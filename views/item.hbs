<section class="mb-6">
  <a href="/dashboard" class="inline-block mb-3 text-sm text-gray-400 font-medium hover:text-indigo-600 transition-colors no-underline">â† Back to Dashboard</a>
  <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">{{item.name}}</h1>
</section>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-start">
  <!-- Image Column -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <img src="{{item.imagePath}}" alt="{{item.name}}" class="w-full block object-cover max-h-[480px]" />
  </div>

  <!-- Info Column -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-5">
      {{#if (eq item.status 'Lost')}}
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-red-50 text-red-600">{{item.status}}</span>
      {{/if}}
      {{#if (eq item.status 'Found')}}
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-50 text-green-600">{{item.status}}</span>
      {{/if}}
      {{#if (eq item.status 'Closed')}}
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-gray-100 text-gray-500">{{item.status}}</span>
      {{/if}}
      <span class="text-xs text-gray-400 font-mono">ID: {{item.id}}</span>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex flex-col gap-0.5">
        <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">ğŸ“ Location</span>
        <span class="text-sm text-gray-800">{{item.location}}</span>
      </div>
      <div class="flex flex-col gap-0.5">
        <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">ğŸ“… Date</span>
        <span class="text-sm text-gray-800">{{item.date}}</span>
      </div>
      <div class="flex flex-col gap-0.5">
        <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">âœ‰ï¸ Contact</span>
        <span class="text-sm text-gray-800">{{item.contact}}</span>
      </div>
      <div class="flex flex-col gap-0.5 sm:col-span-2">
        <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">ğŸ“ Description</span>
        <span class="text-sm text-gray-800">{{item.description}}</span>
      </div>
    </div>

    <hr class="my-5 border-gray-200" />

    <!-- Status Management -->
    <h3 class="text-sm font-semibold text-gray-700 mb-3">Update Status</h3>
    <form action="/items/{{item.id}}/status" method="POST" class="flex flex-col gap-3">
      <div class="flex flex-col sm:flex-row gap-2">
        <label class="flex-1 cursor-pointer">
          <input type="radio" name="status" value="Lost" {{#if (eq item.status 'Lost')}}checked{{/if}} class="peer hidden" />
          <span class="block text-center py-2 px-3 rounded-lg border-2 border-gray-200 text-sm font-semibold text-red-500 peer-checked:border-red-500 peer-checked:shadow-sm transition-all hover:bg-red-50">ğŸ”´ Lost</span>
        </label>
        <label class="flex-1 cursor-pointer">
          <input type="radio" name="status" value="Found" {{#if (eq item.status 'Found')}}checked{{/if}} class="peer hidden" />
          <span class="block text-center py-2 px-3 rounded-lg border-2 border-gray-200 text-sm font-semibold text-green-500 peer-checked:border-green-500 peer-checked:shadow-sm transition-all hover:bg-green-50">ğŸŸ¢ Found</span>
        </label>
        <label class="flex-1 cursor-pointer">
          <input type="radio" name="status" value="Closed" {{#if (eq item.status 'Closed')}}checked{{/if}} class="peer hidden" />
          <span class="block text-center py-2 px-3 rounded-lg border-2 border-gray-200 text-sm font-semibold text-gray-500 peer-checked:border-gray-500 peer-checked:shadow-sm transition-all hover:bg-gray-50">âš« Closed</span>
        </label>
      </div>
      <button type="submit" class="w-full py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold text-sm rounded-lg shadow-sm hover:shadow-md transition-all">Save Status</button>
    </form>

    <hr class="my-5 border-gray-200" />

    <!-- Delete -->
    <form action="/items/{{item.id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this report? This action cannot be undone.');">
      <button type="submit" class="w-full py-2.5 bg-red-600 hover:bg-red-700 text-white font-semibold text-sm rounded-lg shadow-sm hover:shadow-md transition-all">ğŸ—‘ï¸ Delete Report</button>
    </form>
  </div>
</div>
